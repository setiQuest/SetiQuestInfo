body 
{
	text-align:center;
}

#wrapper 
{
       margin: 0 auto;
       width: 800px; /* Replace the xxxx with the the width of your site (eg 800px)*/
       text-align:left;
}

#header_logo {
        float:left;
        padding:3px;
        }

#header_text {
        position:relative;
        float:right;
        width: 500px;
        font-size: 34px; 
        font-family: tahoma; 
        color: #909090;
        padding:3px;
        }

#main_pic1 {
        float:left;
        padding-right: 10px;
        padding-left: 5px;
}

#main_pic2 {
        float: right;
        padding-right: 10px;
        padding-left: 3px;
        margin-top:10px;
}

#main_pic3 {
        float:left;
        padding-right: 10px;
        padding-left: 15px;
        margin-top:10px;
}

#left_area {
        position:relative;
        float:left;
        width: 600px;
        top: 5px;
        font-family: tahoma;
}

#right_area {
        position:relative;
        float:right;
        width: 180px;
        top: 15px;
        font-family: tahoma;
}

#area2 {
        padding-top: 0px;
        padding-left: 0px;
        font-family: tahoma;
        font-size: 14px; 
}
   

#content {
        font-family:tahoma;
        font-size:14px;
        color:#444444;
        padding-left:10px;
        padding-right:10px;
}

h1 {
        margin-left:auto;
        margin-right:auto;
        font-family:tahoma;
        font-size:18px;
        padding:0px;
        line-height:22px;
        color:#444444;
        text-align:center;
   }

p {
    margin-top:5px;
    margin-left:15px;
    margin-right:10px;
}

h2 {
    font-family: tahoma;
    font-size: 14px;
    margin-top:5px;
    margin-left:15px;
    margin-right:10px;
}




